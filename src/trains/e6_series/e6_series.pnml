        0:  sw_e6_series_2nd_car_short_forwards;
        sw_e6_series_2nd_car_short_backwards;			
      }

    // Short or Standard?
    switch (FEAT_TRAINS, SELF, sw_e6_series_2nd_car_length_check, num_vehs_in_consist < 7 ) {				
        1:  sw_e6_series_2nd_car_short;
        sw_e6_series_2nd_car_standard;			
      }

    // Identify the 2nd cars
    switch (FEAT_TRAINS, SELF, sw_e6_series_2nd_car_checks, position_in_consist == 1 || position_in_consist_from_end == 1 ) {				
        1:  sw_e6_series_2nd_car_length_check;
        sw_e6_series_midcars;			
      }

    // First car checks
    switch (FEAT_TRAINS, SELF, sw_e6_series_cab_not_reversed, position_in_consist) {				
        0:  ss_e6_series_cabyf;     
        ss_e6_series_cabrf;			
      }

