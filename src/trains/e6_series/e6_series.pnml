        0:  ss_e6_series_cabyb;     
        ss_e6_series_cabrb;		  
      }

    switch (FEAT_TRAINS, PARENT, sw_e6_series_front_cab_checks, vehicle_is_reversed) {				
        1:  sw_e6_series_cab_reversed;
        sw_e6_series_cab_not_reversed;				
      }

    // Is it a cab car?
    switch (FEAT_TRAINS, SELF, sw_e6_series_graphics, position_in_consist == 0 || position_in_consist_from_end == 0) {				
        1:  sw_e6_series_front_cab_checks;
        sw_e6_series_2nd_car_checks;				
      }

