/* Begin 700 Series STATS */

/* RUNNING COSTS */
    running_cost_test_700_series = 187;    // 150 is approx JPS
    
    switch (FEAT_TRAINS, SELF, sw_test_700_series_running_costs, current_speed) {
        0: running_cost_test_700_series / 10 ;           // Stopped
        1..15: running_cost_test_700_series / 4 ; 	    // Moving below ~33.5 mph
        running_cost_test_700_series ; 				    // Track speed
    }

/* WEIGHT */
    weight_test_700_series = 44;           // 44t per JPS

    switch (FEAT_TRAINS, SELF, sw_test_700_series_weight, NumberCarsInConsist() * weight_test_700_series ) {return;}  

/* POWER */
    power_per_motor_test_700_series = 369; // in hp (275 kW)

    //switch (FEAT_TRAINS, SELF, sw_test_700_series_power, NumberCarsInConsist() * power_per_motor_700_series * 4 ) {return;}

    switch(FEAT_TRAINS, SELF, sw_test_700_series_power, cargo_subtype) {
        0: NumberCarsInConsist() * 3 / 4 * power_per_motor_test_700_series * 4;       
        max ( NumberCarsInConsist() - 2 , 0 ) * power_per_motor_test_700_series * 4;
    }

/* CARGO CAPACITY 

    16-car JPS  1248/1560/1872/2184
    8-car JPS   624/780/936/1092

        16-car  8-car
    IRL 1323    571
    RW  1344    576        
    LS  2016    864    
    DC  2688    1152         
*/

    switch(FEAT_TRAINS, SELF, sw_test_700_series_cargo_capacity, param_basecapacity) {
        0: return 28;       // 1x Real World Capacity
        2: return 56;       // 2x Double Real World Capacity
        return 42;          // 1.5x Long Sprite Adjusted Capacity 
    }

/* LOADING SPEED */

    switch(FEAT_TRAINS, SELF, sw_test_700_series_loading_speed, param_basecapacity) {
        0: return 28 / param_loading_2D;        // 1x Real World Capacity
        2: return 56 / param_loading_2D;        // 2x Double Real World Capacity
        return 42 / param_loading_2D;           // 1.5x Long Sprite Adjusted Capacity 
    }

