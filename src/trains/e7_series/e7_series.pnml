	alternative_sprites(ss_e7_series_buy_10,       	ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/12/purchase.png") {template_purchase(0, 0)}

		switch (FEAT_TRAINS, SELF, sw_e7_series_buy, param_spritelength) {
