	spriteset(ss_e7_series_cab_10,             		"src/trains/dummy/empty.png") {template_dummy(0,0)}
    spriteset(ss_e7_series_cab_rev_10,             	"src/trains/dummy/empty.png") {template_dummy(0,0)}

    alternative_sprites(ss_e7_series_cab_12,    	ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/12/e7_series.png") {template_12_standard(1,1)}
    alternative_sprites(ss_e7_series_cab_rev_12,   	ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/12/e7_series.png") {template_12_reversed(1,41)}

	alternative_sprites(ss_e7_series_cab_10,    	ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/10/e7_series.png") {template_10_standard(1,1)}
    alternative_sprites(ss_e7_series_cab_rev_10,   	ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/10/e7_series.png") {template_10_reversed(1,41)}

		switch (FEAT_TRAINS, SELF, sw_e7_series_cab, param_spritelength) {
			1: ss_e7_series_cab_10;					// Length 10
			ss_e7_series_cab_12;					// Length 12
		}
	
		switch (FEAT_TRAINS, SELF, sw_e7_series_cab_rev, param_spritelength) {
			1: ss_e7_series_cab_rev_10;				// Length 10
			ss_e7_series_cab_rev_12;				// Length 12
		}

    // COACH
    spriteset(ss_e7_series_coach_12,             	"src/trains/dummy/empty.png") {template_dummy(0,0)}
    spriteset(ss_e7_series_coach_rev_12,    		"src/trains/dummy/empty.png") {template_dummy(0,0)}

	spriteset(ss_e7_series_coach_10,             	"src/trains/dummy/empty.png") {template_dummy(0,0)}
    spriteset(ss_e7_series_coach_rev_10,    		"src/trains/dummy/empty.png") {template_dummy(0,0)}

    alternative_sprites(ss_e7_series_coach_12,     	ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/12/e7_series.png") {template_12_standard(1,121)}
    alternative_sprites(ss_e7_series_coach_rev_12,  ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/12/e7_series.png") {template_12_reversed(1,121)}

	alternative_sprites(ss_e7_series_coach_10,     	ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/10/e7_series.png") {template_10_standard(1,121)}
    alternative_sprites(ss_e7_series_coach_rev_10,  ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trains/e7_series/10/e7_series.png") {template_10_reversed(1,121)}

		switch (FEAT_TRAINS, SELF, sw_e7_series_coach, param_spritelength) {
			1: ss_e7_series_coach_10;				// Length 10
